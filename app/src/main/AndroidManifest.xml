<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="farkasnorbert.sapientia.ms.androidprojekt">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activitys.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.LoginActivity"
            android:screenOrientation="portrait"
            android:label="login" />
        <activity
            android:name=".Activitys.AddAdActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_add_ad" />
        <activity
            android:name=".Activitys.AdsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_ads" />
        <activity
            android:name=".Activitys.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settigs" />
        <activity
            android:name=".Activitys.AdViewActivity"
            android:screenOrientation="portrait"
            android:label="adview" />
        <activity
            android:name=".Activitys.RegisterActivity"
            android:screenOrientation="portrait"
            android:label="register" />
    </application>

</manifest>